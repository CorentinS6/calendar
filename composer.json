	],
	"repositories": [
		{
			"type": "composer",
			"url": "https://plugins.roundcube.net"
		}
	],
	"require": {
		"php": ">=7.1.0",
		"roundcube/plugin-installer": "~0.1.6",
		"texxasrulez/libcalendaring": "*",
		"texxasrulez/libkolab": "*",
		"sabre/dav": "3.0.9",
		"sabre/event": "*",
		"sabre/http": "*",
		"sabre/uri": "*",
		"sabre/vobject": "*",
		"sabre/xml": "*",
		"league/oauth2-client": "*",
		"league/oauth2-google": "*"
	},
	"extra": {
		"roundcube": {
			"min-version": "1.3.0",
			"sql-dir": "SQL"
		}
	},
    "bin": [
        "bin/copyDateTimeParser.sh"
    ],
	"minimum-stability": "dev",
	"scripts": {
		"post-dependencies-solving": "bin/copyDateTimeParser.sh"
	}
}