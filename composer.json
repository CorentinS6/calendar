{
    "name": "texxasrulez/calendar",
    "type": "roundcube-plugin",
    "description": "CalDav Capable Calendar plugin for Roundcube and Nextcloud",
    "homepage": "https://github.com/texxasrulez/roundcube_caldav_calendar",
    "license": "GPL-3.0+",
    "version": "1.0",
	"config": {
		"vendor-dir": "/plugins/calendar/lib/vendor",
        "bin-dir" : "/plugins/calendar/lib/vendor/bin"
		},
    "authors": [
		{
            "name": "Gene Hawkins",
            "email": "texxasrulez@yahoo.com",
			"homepage": "https://www.genesworld.net",
            "role": "Developer"
        },
		{
            "name": "Thomas Bruederli",
            "email": "bruederli@kolabsys.com",
            "role": "Lead"
        },
        {
            "name": "Aleksander Machniak",
            "email": "machniak@kolabsys.com",
            "role": "Developer"
        }
    ],
    "repositories": [
	{
		"type": "composer",
		"url": "https://plugins.roundcube.net"
	}
    ],
    "require": {
        "php": ">=7.0.0",
        "texxasrulez/libcalendaring": "*",
        "texxasrulez/libkolab": "*",
		"league/oauth2-client": "*",
		"league/oauth2-google": "*",
		"fxp/composer-asset-plugin": "*",
        "sabre/vobject": "^4.2.0-alpha1",
        "sabre/event" : "^5.0",
        "sabre/xml"  : "^2.0.1",
        "sabre/http" : "^5.0",
        "sabre/uri" : "^2.0",
        "ext-dom": "*",
        "ext-pcre": "*",
        "ext-spl": "*",
        "ext-simplexml": "*",
        "ext-mbstring" : "*",
        "ext-ctype" : "*",
        "ext-date" : "*",
        "ext-iconv" : "*",
        "lib-libxml" : ">=2.7.0",
        "psr/log": "^1.0",
        "ext-json": "*"
    },
    "require-dev" : {
        "phpunit/phpunit" : "^6",
        "evert/phpdoc-md" : "~0.1.0",
        "monolog/monolog": "^1.18"
    },
    "autoload": {
        "psr-4": {
            "League\\OAuth2\\Client\\": "src/",
            "League\\OAuth2\\Google\\": "src/",
            "Sabre\\DAV\\"     : "lib/DAV/",
            "Sabre\\DAVACL\\"  : "lib/DAVACL/",
            "Sabre\\CalDAV\\"  : "lib/CalDAV/",
            "Sabre\\CardDAV\\" : "lib/CardDAV/"
        }
    },
     "extra": {
        "roundcube": {
        "min-version": "1.3.0",
            "sql-dir": "SQL",
            "sql-dir": "drivers/caldav/SQL",
            "sql-dir": "drivers/database/SQL",
            "sql-dir": "drivers/ical/SQL",
            "sql-dir": "drivers/kolab/SQL",
            "sql-dir": "drivers/ldap/SQL"
        }
    }
}
